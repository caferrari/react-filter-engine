{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "baseUrl": "src"
  },
  "exclude": [
    "build",
    "scripts",
    "acceptance-tests",
    "server",
    "socket",
    "coverage",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "public/widget"
  ]
}